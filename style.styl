@import url('https://fonts.googleapis.com/css?family=Montserrat:400,400i,500,600,700&display=swap');
body    
    margin: 0
    #root
        background-color: #1f1f3f
        > div
            max-width 500px
            margin: 0 auto
            padding: 10px 0
            h2 
                font-size: 20px
                background-color: #14142d
                padding: 32px 40px
                text-transform: uppercase
                color white 
                box-shadow: 0px 9px 15.4px 0.6px rgba(16, 16, 39, 0.34);
                cursor pointer
                font-family Montserrat
                font-weight 600
    .hidden 
        max-height: 0
        overflow: hidden
        transition: 0.5s
        p
            margin: 0
        &.active
            max-height: 400px
